---
layout:
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {%- for post in site.posts -%}
    {%- if post.id contains "404" -%}{%- else -%}
      <url>
        <loc>{{site.url}}{{site.baseurl}}{{ post.url }}</loc>
        {%- assign versions=site.posts | where:"ref", post.ref -%}
        {%- for version in versions -%}
          <xhtml:link rel="alternate" hreflang="{{ version.lang }}" href="{{site.url}}{{site.baseurl}}{{ version.url }}" />
        {%- endfor -%}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
		{%- if post.sitemap.changefreq -%}
        <changefreq>{{ post.sitemap.changefreq }}</changefreq>
		{%- else -%}
		<changefreq>monthly</changefreq>
		{%- endif -%}
		{%- if post.sitemap.priority -%}
		<priority>{{ post.sitemap.priority }}</priority>
		{%- else -%}
		<priority>0.3</priority>
		{%- endif -%}
      </url>
    {%- endif -%}
  {%- endfor -%}
  {%- for page in site.pages -%}
	{%- unless page.sitemap.exclude == "yes" -%}
    {%- if page.id contains "404" -%}
    {%- elsif page.url contains "/assets/" or page.url contains ".xml" or page.url contains ".json" or page.url contains "/en/2019/" or page.url contains "/robots.txt" -%}
    {%- else -%}
      <url>
        <loc>{{site.url}}{{site.baseurl}}{{ page.url }}</loc>
        {%- assign versions=site.pages | where:"ref", page.ref -%}
        {%- for version in versions -%}
          <xhtml:link rel="alternate" hreflang="{{ version.lang }}" href="{{site.url}}{{site.baseurl}}{{ version.url }}" />
        {%- endfor -%}
        {%- if page.sitemap.changefreq -%}
        <changefreq>{{ page.sitemap.changefreq }}</changefreq>
		{%- else -%}
		<changefreq>monthly</changefreq>
		{%- endif -%}
		{%- if page.sitemap.priority -%}
		<priority>{{ page.sitemap.priority }}</priority>
		{%- else -%}
		<priority>0.3</priority>
		{%- endif -%}
      </url>
    {%- endif -%}
	{%- endunless  -%}
  {%- endfor -%}
</urlset>